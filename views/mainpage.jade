html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1', charset='utf-8')
    title
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
    script(type='text/javascript', src='http://code.jquery.com/jquery-2.1.0.min.js')
    script(src='//code.jquery.com/ui/1.11.2/jquery-ui.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
    style(type='text/css')
      div,.col-xs-1, .col-sm-1, .col-md-1, .col-lg-1, .col-xs-2, .col-sm-2, .col-md-2,
      .col-lg-2, .col-xs-3, .col-sm-3, .col-md-3, .col-lg-3, .col-xs-4, .col-sm-4,
      .col-md-4, .col-lg-4, .col-xs-5, .col-sm-5, .col-md-5, .col-lg-5, .col-xs-6,
      .col-sm-6, .col-md-6, .col-lg-6, .col-xs-7, .col-sm-7, .col-md-7, .col-lg-7,
      .col-xs-8, .col-sm-8, .col-md-8, .col-lg-8, .col-xs-9, .col-sm-9, .col-md-9,
      .col-lg-9, .col-xs-10, .col-sm-10, .col-md-10, .col-lg-10, .col-xs-11, .col-sm-11,
      .col-md-11, .col-lg-11, .col-xs-12, .col-sm-12, .col-md-12, .col-lg-12 {
      margin:0;
      padding:0;
      }
      .header h2 {
      text-align: center;
      background-color: rgb(99, 91, 211);
      color: #fff;
      margin: 0;
      padding: 11px;
      }
      .container{
      background-image: url("/btour/hatch.png");
      height: 700px;
      z-index: -1;
      }
      .profile img{
      width: 100px;
      height: 100px;
      border-radius: 50px;
      margin-left: 150px;
      margin-top: 18px;
      }
      .profile p{
      text-align:center;
      margin-top: 5px;
      font-size: 22px;
      color:#fff;
      font-weight:bold;
      }
      .cards {
      margin: 5px 5px 0 5px;
      }
      .cards .btn{
      padding : 15px 0px;
      border: 0px dashed #ddd;
      width:100%;
      font-size: small;
      color: #777;
      }
      .cards .btn:active{
      background-color: #fff;
      }
      .card {
      margin: 5px;
      background-color: rgba(253, 163, 24, 0.78);
      border: 1px solid transparent;
      box-shadow:0 1px 1px rgba(0,0,0,.05);
      box-sizing: border-box;
      border-radius: 15px;
      height:150px;
      padding-left: 10px;
      color: #fff;
      font-size: large;
      position: absolute;
      display: inline-block;
      right: 13px;
      left: -3px;
      }
      .card h3{
      margin-top:30px;
      font-weight: bold;
      text-align: center;
      }
      .add{
      border-radius: 50px;
      font-size: xx-large;
      padding: 5px;
      margin: 5px;
      color:white;
      }
      .delete{
      font-size: xx-large;
      float: right;
      margin: 0px 10px 20px 0;
      }
    script
      gotoAdd = function(){
      location.href="/btour/choice.html"
      }
      deleteCard = function(){
      //db에서 delete.
      }
  body
    .header
      h2.col-xs-12 Btour
    .container.col-xs-12
      .profile
        img(alt='user', src=posts)
        p.col-xs-12 yuki
      .col-xs-12
        span.add(onclick='gotoAdd()') +
      .cards.bs-docs-section.col-xs-12
        .card(style='z-index: 1; background-color: rgba(169, 24, 253, 0.78);')
          span.delete(style='z-index: 1;', onclick='deleteCard()') -
          h3 yonsama's House
        .card(style='z-index: 2; background-color: rgba(24, 140, 253, 0.78); top: 70px;')
          span.delete(style='z-index: 2;', onclick='deleteCard()') -
          h3 Seoutl Museum of Art
        .card(style='z-index: 3; border-bottom-color: rgba(183, 250, 232, 0.78); top: 140px;')
          span.delete(style='z-index: 3;', onclick='deleteCard()') -
          h3 Noryangjin Fisheries Wholesal Market

				